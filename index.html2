  <div id="toast" class="toast"></div>

  <script>
    // Basic state + persistence
    const root = document.documentElement;
    const prefsKey = 'orion_prefs';
    const defaultPrefs = { theme: 'dark' };
    let prefs = JSON.parse(localStorage.getItem(prefsKey)) || defaultPrefs;

    // Elements
    const yearEl = document.getElementById('year');
    const themeBtn = document.getElementById('themeBtn');
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const mobileMenu = document.getElementById('mobileMenu');
    const contactForm = document.getElementById('contactForm');
    const toast = document.getElementById('toast');
    const demoButtons = document.querySelectorAll('[data-demo]');
    const demoBtn = document.getElementById('demoBtn');
    const buyNowBtn = document.getElementById('buyNow');

    // Apply preferences
    function applyPrefs() {
      // theme
      if (prefs.theme === 'light') {
        root.setAttribute('data-theme', 'light');
        themeBtn.textContent = 'üåô Escuro';
      } else {
        root.removeAttribute('data-theme');
        themeBtn.textContent = '‚òÄÔ∏è Claro';
      }

      localStorage.setItem(prefsKey, JSON.stringify(prefs));
    }

    // Show toast notification
    function showToast(message, duration = 3000) {
      toast.textContent = message;
      toast.classList.add('show');
      setTimeout(() => {
        toast.classList.remove('show');
      }, duration);
    }

    // Init UI
    yearEl.textContent = new Date().getFullYear();
    applyPrefs();

    // Theme toggle
    themeBtn.addEventListener('click', () => {
      prefs.theme = prefs.theme === 'light' ? 'dark' : 'light';
      applyPrefs();
      showToast(`Modo ${prefs.theme === 'light' ? 'claro' : 'escuro'} ativado`);
    });

    // Demo buttons
    demoButtons.forEach(b => b.addEventListener('click', (e) => {
      e.preventDefault();
      showToast(`Demonstra√ß√£o de ${b.getAttribute('data-demo')} ser√° aberta em breve`);
      setTimeout(() => {
        window.open(`https://demo-orionweb-${b.getAttribute('data-demo')}.netlify.app`, '_blank');
      }, 1500);
    }));

    // Mobile menu
    mobileMenuBtn.addEventListener('click', () => {
      const open = mobileMenu.style.display !== 'block';
      mobileMenu.style.display = open ? 'block' : 'none';
      
      // Close menu when clicking on a link
      if (open) {
        const links = mobileMenu.querySelectorAll('a');
        links.forEach(link => {
          link.addEventListener('click', () => {
            mobileMenu.style.display = 'none';
          });
        });
      }
    });

    // Form submission
    contactForm.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const name = document.getElementById('name').value;
      const email = document.getElementById('email').value;
      const message = document.getElementById('message').value;
      
      // Simulate form submission
      showToast('Mensagem enviada com sucesso! Entraremos em contato em breve.');
      contactForm.reset();
    });

    // Buy now button
    buyNowBtn.addEventListener('click', () => {
      showToast('Redirecionando para p√°gina de compra...');
      setTimeout(() => {
        window.location.href = '#catalog';
      }, 1000);
    });

    // Demo button in hero
    demoBtn.addEventListener('click', () => {
      showToast('Abrindo demonstra√ß√£o...');
      setTimeout(() => {
        window.open('https://demo-orionweb.netlify.app', '_blank');
      }, 1000);
    });

    // Keyboard: Esc closes mobile menu
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        mobileMenu.style.display = 'none';
      }
    });

    // Progressive enhancement: animations on scroll
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.animationPlayState = 'running';
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // Observe elements with fade-in class
    document.querySelectorAll('.fade-in').forEach(el => {
      el.style.animationPlayState = 'paused';
      observer.observe(el);
    });

    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  </script>
</body>
  </html>
